          },
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "icon":                     "hyperion.png",
        "extIcon":                  "https://github.com/ruhigundrelaxed/ioBroker.hyperion/raw/master/admin/hyperion.png",
        "loglevel":                 "info",
        "nondeletable":             true,
